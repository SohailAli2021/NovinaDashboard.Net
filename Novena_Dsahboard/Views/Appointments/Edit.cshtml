@model Novena_Dsahboard.Models.Appointment

@{
    ViewData["Title"] = "Edit";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
};


<h2>Edit</h2>
<div class="card-content">
    <form method="post" enctype="multipart/form-data" >
        <div class="field">
            <label class="label">Edit</label>
            <div class="field-body">
                <div class="field">
                    <div class="control icons-left">
                        <input class="input" type="text" placeholder="Heading" asp-for="Department">
                        <span class="icon left"><i class="mdi mdi-format-title"></i></span>
                    </div>
                </div>
                <div class="field">
                    <div class="control icons-left icons-right">
                        <input class="input" type="text" placeholder="Description" asp-for="Doctor">
                        <span class="icon left"><i class="mdi mdi-mail"></i></span>

                    </div>
                </div>
                <div class="field">
                    <div class="control icons-left icons-right">
                        <input class="input" type="text" placeholder="Description" asp-for="FullName">
                        <span class="icon left"><i class="mdi mdi-mail"></i></span>

                    </div>
                </div>
                <div class="field">
                    <div class="control icons-left icons-right">
                        <input class="input" type="text" placeholder="Description" asp-for="EmailAddress">
                        <span class="icon left"><i class="mdi mdi-mail"></i></span>

                    </div>
                </div>
                <div class="field">
                    <div class="control icons-left icons-right">
                        <input class="input" type="text" placeholder="Description" asp-for="PhoneNum">
                        <span class="icon left"><i class="mdi mdi-mail"></i></span>

                    </div>
                </div>
                <div class="field">
                    <div class="control icons-left icons-right">
                        <input class="input" type="text" placeholder="Description" asp-for="YourMassage">
                        <span class="icon left"><i class="mdi mdi-mail"></i></span>

                    </div>
                </div>


            </div>
        </div>

        <div class="btn btn-danger">

            <input type="submit" value="save" class="btn btn-sm btn-primary rounded-0 text-uppercase" />
            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i> Back to List</a>

        </div>


    </form>
</div>

