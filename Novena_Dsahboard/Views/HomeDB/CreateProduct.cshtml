@model Novena_Dsahboard.ViewModel.ProductViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "CreateProduct";
}
@*@model Novena_Dsahboard.Models.Product*@
@*@model Novena_Dsahboard.Models.Product*@


    <section class="is-hero-bar">
        <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
            <h1 class="title">
                Products
            </h1>

        </div>
    </section>


    <div class="col-md-10 mx-auto py-4">
        <div class="card">

            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-action="CreateProduct">
                    <div class="field">
                        <label class="label">From</label>
                        <div class="field-body">
                            <div class="field">
                                <div class="control icons-left">
                                    <input class="input" type="text" placeholder="Title" asp-for="Title">
                                    <span class="icon left"><i class="mdi mdi-format-title"></i></span>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control icons-left icons-right">
                                    <input class="input" type="text" placeholder="Price" asp-for="Price">
                                    <span class="icon left"><i class="mdi mdi-mail"></i></span>

                                </div>
                            </div>
                            <div class="field">
                                <div class="control icons-left icons-right">
                                    <input class="input" type="text" placeholder="Description" asp-for="Description">
                                    <span class="icon left"><i class="mdi mdi-database-export"></i></span>

                                </div>
                            </div>
                            <div class="field">
                                <div class="control icons-left icons-right">
                                    @Html.DropDownListFor(model => model.Catagory, new List<SelectListItem>
           {
               new SelectListItem{Text="ChildCare" , Value="Child Care"},
               new SelectListItem{Text="Diabetes" , Value="Diabetes"},
                new SelectListItem{Text="AdultHealth" , Value="Adult Health"},
               new SelectListItem{Text="ImmumeMedicine" , Value="Immume Medicine"},
                new SelectListItem{Text="PainKillers" , Value="Pain Killers"},
               new SelectListItem{Text="Antibiotics" , Value="Antibiotics"}

           })

                                </div>
                            </div>


                            <div class="field">
                                <div class="control icons-left icons-right">
                                    <input class="input" placeholder="Picture" asp-for="ProImage">
                                    <span class="icon left"><i class="mdi mdi-image"></i></span>

                                    <span asp-validation-for="ProImage" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="btn btn-danger">

                        <input type="submit" value="submit" class="btn btn-sm btn-primary rounded-0 text-uppercase" />
                        <a asp-action="Index" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i> Back to List</a>

                    </div>


                </form>

            </div>
        </div>
    </div>

    @section scripts{
        <script type="text/javascript">

            // Add the following code if you want the name of the file appear on select
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
        </script>
    }

